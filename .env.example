# Environment Configuration for MCP Server

# Server Configuration
NODE_ENV=production
PORT=3000
MCP_SERVER_NAME=mcp-server-connection
MCP_SERVER_VERSION=1.0.0

# AWS Configuration (for profile server)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
DYNAMODB_TABLE_NAME=user_profiles
DYNAMODB_ENDPOINT=

# Profile Server Configuration
DEFAULT_PROFILE_ID=default
PROFILE_CACHE_TTL=300
ENABLE_PROFILE_CACHING=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_CALCULATOR_TOOL=true
ENABLE_ECHO_TOOL=true
ENABLE_TIME_TOOL=true
ENABLE_PROFILE_TOOL=true

# Render-specific configurations
# These will be set automatically by Render
# RENDER=true
# RENDER_EXTERNAL_URL=
# RENDER_INSTANCE_ID=